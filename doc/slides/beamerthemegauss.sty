%%
%% the '\lastpage' command may be used to insert a 'running-out' slide
%%
\newcommand*{\lastpage}{
	\setbeamertemplate{navigation symbols}{}
	\begin{frame}[plain, t]
	\begin{tikzpicture}[remember picture, overlay]
		\node [
			anchor=south east
		] (gaussLogoFooter) at ($(current page.south east)+(-.44cm, .34cm)$) {%
			\includegraphics[height=.9cm]{logos/gauss}
		};
		\node [
			anchor=north east,
		] at ($(current page.north east)+(-.44cm, -.34cm)$) {%
			\printinstlogo
		};
	\end{tikzpicture}	
    
	\vspace{4cm}
    \scriptsize
    \protect\iflanguage{ngerman}{Vielen Dank f\"ur Ihre Aufmerksamkeit!}{}
    \protect\iflanguage{english}{Thank you for your kind attention!}{}


    \vspace{4ex}
    \textbf{\insertauthor}\ifx\printemail\@empty\else{~--~{\color{gaussblue}\printemail}}\fi

    \vspace{2ex}
	\printaffiliation

    \vspace{2ex}
	{\color{gaussblue}\url{\printwebaddress}}
	\end{frame}
}

