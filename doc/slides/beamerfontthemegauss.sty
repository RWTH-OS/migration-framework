\mode<presentation>

%%
%% settings for the title page
%%
\setbeamerfont{title     in title page}{size=\Large}
\setbeamerfont{subtitle  in title page}{size=\large}
\setbeamerfont{author    in title page}{size=\normalsize}
\setbeamerfont{institute in title page}{size=\normalsize}
\setbeamerfont{date      in title page}{size=\normalsize}

\setbeamerfont{block title}{size=\bfseries}
%%
%% settings for the header and footer (outer theme)
%%
\setbeamerfont{framenumber}{size=\tiny}
\setbeamerfont{footer}{size=\tiny}
\setbeamerfont{frametitle}{size=\Large}
\setbeamerfont{section}{size=\bfseries\Large}

\mode<all>
