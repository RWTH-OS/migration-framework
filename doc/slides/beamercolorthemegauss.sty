\mode<presentation>

%%
%% define colors
%%
\xdefinecolor{gaussblue}{RGB}{58,72,104}
\xdefinecolor{gaussgray}{RGB}{137,137,137}

\xdefinecolor{normal}{RGB}{79,129,189}
\xdefinecolor{ultralight}{RGB}{220,230,242}
\xdefinecolor{verylight}{RGB}{185,205,229}
\xdefinecolor{light}{RGB}{149,179,215}
\xdefinecolor{dark}{RGB}{55,96,146}
\xdefinecolor{verydark}{RGB}{37,64,97}

%%
%% settings for the title page
%%
%\setbeamercolor{title in titlepage}{fg=eonercred}
\setbeamercolor{title}{fg=gaussblue}
\setbeamercolor{block title}{fg=gaussblue}
\setbeamercolor{title in head/foot}{fg=gaussblue}
\setbeamercolor{subtitle}{fg=black}
\setbeamercolor{author in head/foot}{fg=black}
\setbeamercolor{institute in head/foot}{fg=gaussblue}



%%
%% settings for the outer theme
%%
\setbeamercolor{footer}{fg=gaussgray}
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{section}{fg=black}

%%
%% settings for the table of contents
%%
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{subsection in toc}{fg=black}


%%
%% settings for the inner theme (e.g. itemize)
%%
\setbeamercolor{enumerate item}{fg=gaussblue}
\setbeamercolor{enumerate subitem}{fg=gaussblue}
\setbeamercolor{enumerate subsubitem}{fg=gaussblue}
\setbeamercolor{itemize item}{fg=gaussblue, bg=gaussblue}
\setbeamercolor{itemize subitem}{fg=gaussblue}
\setbeamercolor{itemize subsubitem}{fg=gaussblue}

\mode<all>

